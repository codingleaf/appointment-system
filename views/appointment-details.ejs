<!DOCTYPE html>
<html lang="en">
<head>
  <%- include('./partials/header.ejs') %>
  <link rel="stylesheet" type="text/css" href="/styles/appointment-details.css">
</head>
<body>
  <%- include('./partials/nav.ejs') %>
  <div class="content">
    <h1>
      APPOINTMENT DETAILS
    </h1>
    <% if (appointment) { %>
      <div class="appointment-details">
        <div class="div-date">
          <div class="title">DATE</div>
          <div class="cell"><%= appointment.appointmentDate %></div>
        </div>
        <div class="div-time">
          <div class="title">TIME</div>
          <div class="cell"><%= appointment.appointmentTime %></div>
        </div>
        <div class="div-services">
          <div class="title">SERVICES</div>
          <div class="cell"><%= appointment.services %></div>
        </div>
      </div>
      <div class="btn-div">
        <a href="/change-appointment"><button class="btn-change-appointment">CHANGE APPOINTMENT</button></a>
      </div>
    <% } else { %>
      <div class="btn-div">
        <a href="/create-appointment"><button class="btn-create-appointment">CREATE APPOINTMENT</button></a>
      </div>
    <% } %> 
  </div>
  <%- include('./partials/footer.ejs') %>
</body>
</html>
